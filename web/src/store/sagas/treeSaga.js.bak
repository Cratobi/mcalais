import { call, put, takeLatest } from 'redux-saga/effects'
import API from './api/tree'

import { TREE } from '../index'
import { saveTree } from '../actions'

function* HandleFetchTree({ payload }) {
  try {
    const tree = yield call(API.fetchTree, [payload])
    yield put(saveTree(tree))
  } catch (err) {
    yield put({ type: 'TREE.SAVE', message: err.message })
  }
}
function* HandleSendTree({ payload }) {
  try {
    const tree = yield call(API.sendTree, [payload])
    yield put(saveTree(tree))
  } catch (err) {
    yield put({ type: 'TREE.SAVE', message: err.message })
  }
}

function* watchTree() {
  yield takeLatest(TREE.FETCH, HandleFetchTree)
  yield takeLatest(TREE.SEND, HandleSendTree)
}

export default watchTree
